#!/bin/bash

rootdir=`dirname $0`

echo "
------------------------------------------------
FUNCTION TEST COMPLIANCE:
"
$rootdir/_ftest_compliance.check
echo "
-------------------------------------------------
"

## run all seen ftest (with .tester extension)
## so nothing will be left out.

for each_test in $(ls -1 $rootdir/*.tester); do
  $rootdir/$each_test
done
